{
  "imports":{
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "tasks": {
    "fetch": "deno run --allow-net",
    "solve": "deno run --allow-net main.ts",
    "test": "deno test --allow-net",
    "lint": "deno lint"
  },
    "lint": {
        "include": ["./"],
        "exclude": ["./testdata/", "./fixtures/**/*.ts"],
        "rules": {
          "tags": ["recommended"],
          "include": ["ban-untagged-todo"],
          "exclude": ["no-unused-vars"]
        }
      },
      "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["./"],
        "exclude": ["./testdata/", "./fixtures/**/*.ts"]
      }
}